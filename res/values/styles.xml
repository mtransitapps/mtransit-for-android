<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MTBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
    </style>

    <style name="MTTheme" parent="MTBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- default background color (#fffafafa) is too light, using old default background color (#ffeeeeee) -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MTTheme.Launcher" parent="MTTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="MTThemePreferences" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="MTTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MTSwitch" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/switch_track_tint</item>
        <item name="android:colorForeground">@color/switch_track_tint</item>
    </style>
</resources>