<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MTBaseTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="colorAccent">@color/color_accent</item>

        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>

        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>
    </style>

    <style name="MTTheme" parent="MTBaseTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- default background color (#fffafafa) is too light, using old default background color (#ffeeeeee) -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MTTheme.Launcher" parent="MTTheme">
        <item name="android:windowBackground">@drawable/background_launch_screen</item>
    </style>

    <style name="MTThemePreferences" parent="@style/Theme.MaterialComponents.DayNight.DarkActionBar" />

</resources>