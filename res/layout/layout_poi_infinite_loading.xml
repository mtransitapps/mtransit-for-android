<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:focusable="false"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingLeft="@dimen/poi_padding_left_no_extra"
    android:paddingTop="@dimen/poi_padding_top"
    android:paddingRight="@dimen/poi_padding_right"
    android:paddingBottom="@dimen/poi_padding_bottom">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/worldExploredTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/world_explored"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>