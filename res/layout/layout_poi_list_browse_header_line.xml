<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/button_padding_half"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/btn1Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_rect_bg"
            android:drawablePadding="@dimen/button_drawable_padding"
            android:drawableTint="?attr/colorOnPrimary"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="@dimen/button_text_padding"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnPrimary"
            tools:drawableLeft="@drawable/ic_directions_bus_white_24dp"
            tools:text="BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/button_padding_half"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/btn2Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_rect_bg"
            android:drawablePadding="@dimen/button_drawable_padding"
            android:drawableTint="?attr/colorOnPrimary"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="@dimen/button_text_padding"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/colorOnPrimary"
            tools:drawableLeft="@drawable/ic_directions_bus_white_24dp"
            tools:text="BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE BROWSE" />

    </FrameLayout>

</LinearLayout>