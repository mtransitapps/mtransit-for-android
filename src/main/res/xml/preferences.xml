<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- DISPLAY -->
    <PreferenceCategory
        android:key="pDisplay"
        android:title="@string/display_pref_cat_title">
        <!-- UNITS -->
        <ListPreference
            android:defaultValue="meter"
            android:dialogTitle="@string/unit_pref_dialog_title"
            android:entries="@array/unit_pref_entries"
            android:entryValues="@array/unit_pref_values"
            android:key="pUnits"
            android:summary="@string/unit_pref_summary"
            android:title="@string/unit_pref_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:enabled="true"
            android:key="pUseInternalWebBrowser"
            android:summary="@string/use_internal_web_browser_pref_summary"
            android:summaryOff="@string/use_internal_web_browser_pref_summary_off"
            android:summaryOn="@string/use_internal_web_browser_pref_summary_on"
            android:title="@string/use_internal_web_browser_pref_title" />
    </PreferenceCategory>
    <!-- DEVICE SETTINGS -->
    <PreferenceCategory
        android:key="pDeviceSettings"
        android:title="@string/device_settings_pref_cat_title">
        <Preference
            android:enabled="true"
            android:key="pDeviceSettingsLanguage"
            android:summary="@string/device_settings_language_pref_summary"
            android:title="@string/device_settings_language_pref_title" />
        <Preference
            android:enabled="true"
            android:key="pDeviceSettingsDateAndTime"
            android:summary="@string/device_settings_date_and_time_pref_summary"
            android:title="@string/device_settings_date_and_time_pref_title" />
        <Preference
            android:enabled="true"
            android:key="pDeviceSettingsLocation"
            android:summary="@string/device_settings_location_pref_summary"
            android:title="@string/device_settings_location_pref_title" />
        <Preference
            android:enabled="false"
            android:key="pDeviceSettingsPowerManagement"
            android:summary="@string/device_settings_power_management_pref_summary"
            android:title="@string/device_settings_power_management_pref_title"
            tools:enabled="true" />
    </PreferenceCategory>
    <!-- FEEDBACK -->
    <PreferenceCategory
        android:key="pFeedback"
        android:title="@string/feedback_pref_cat_title">
        <Preference
            android:enabled="true"
            android:key="pFeedbackEmail"
            android:summary="@string/feedback_email_pref_summary"
            android:title="@string/feedback_email_pref_title" />
        <Preference
            android:enabled="true"
            android:key="pFeedbackStore"
            android:summary="@string/feedback_store_pref_summary"
            android:title="@string/feedback_store_pref_title" />
    </PreferenceCategory>
    <!-- SUPPORT -->
    <PreferenceCategory
        android:key="pSupport"
        android:title="@string/support_pref_cat_title">
        <!-- SUBSCRIPTION -->
        <Preference
            android:enabled="false"
            android:key="pSupportSubs"
            android:summary="@string/ellipsis"
            android:title="@string/ellipsis"
            tools:enabled="true"
            tools:summary="@string/support_subs_pref_summary"
            tools:title="@string/support_subs_pref_title" />
    </PreferenceCategory>
    <!-- SOCIAL -->
    <PreferenceCategory
        android:key="pSocial"
        android:title="@string/social_pref_cat_title">
        <!-- FACEBOOK -->
        <Preference
            android:enabled="true"
            android:key="pSocialFacebook"
            android:summary="@string/social_facebook_pref_summary"
            android:title="@string/social_facebook_pref_title" />
        <!-- TWITTER -->
        <Preference
            android:enabled="true"
            android:key="pSocialTwitter"
            android:summary="@string/social_twitter_pref_summary"
            android:title="@string/social_twitter_pref_title" />
    </PreferenceCategory>
    <!-- ABOUT -->
    <PreferenceCategory
        android:key="pAbout"
        android:title="@string/about_pref_cat_title">
        <!-- PRIVACY POLICY -->
        <Preference
            android:enabled="true"
            android:key="pAboutPrivacyPolicy"
            android:summary="@string/about_privacy_policy_pref_summary"
            android:title="@string/about_privacy_policy_pref_title" />
        <!-- APP VERSION -->
        <Preference
            android:enabled="true"
            android:key="pAboutAppVersion"
            android:summary="@string/about_app_version_pref_summary"
            android:title="@string/about_app_version_pref_title" />
    </PreferenceCategory>
</PreferenceScreen>