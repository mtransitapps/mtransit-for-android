<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingTop="@dimen/title_top_padding"
    android:paddingRight="@dimen/title_right_padding">

    <Button
        android:id="@+id/fullScheduleBtn"
        style="@style/MTButton.Header"
        android:text="@string/full_schedule"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/next_departures_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="false"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/fullScheduleBtn"
        android:drawablePadding="@dimen/title_drawable_padding"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/title_padding_left"
        android:paddingTop="@dimen/title_padding_top"
        android:paddingRight="@dimen/title_padding_right"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:text="@string/next_departures"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?attr/colorOnBackground"
        app:drawableLeftCompat="@drawable/ic_access_time_black_24dp"
        app:drawableTint="?attr/colorOnBackground" />

</RelativeLayout>