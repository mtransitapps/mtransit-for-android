<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/baseline_88"
    android:clipChildren="false"
    android:minHeight="?android:attr/listPreferredItemHeightLarge"
    android:paddingEnd="@dimen/baseline_8"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/next_departure_time_baseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/next_departure_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/next_departure_time_baseline"
        android:layout_alignParentEnd="true"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingEnd="@dimen/baseline_8"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?android:attr/textColorSecondary"
        tools:ignore="RelativeOverlap"
        tools:text="12:34 am" />

    <TextView
        android:id="@+id/next_departures_head_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/next_departure_time"
        android:layout_alignEnd="@id/next_departure_time"
        android:layout_alignParentBottom="true"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-condensed"
        android:gravity="top|start"
        android:includeFontPadding="false"
        android:marqueeRepeatLimit="1"
        android:paddingStart="@dimen/baseline_2"
        android:paddingEnd="@dimen/baseline_2"
        android:paddingBottom="@dimen/baseline_4"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="@dimen/trip_head_sign_text_size"
        android:visibility="invisible"
        tools:ignore="SpUsage"
        tools:text="HEADING HEADING HEADING HEADING HEADING HEADING HEADING"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/next_departure_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/next_departure_time"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:paddingTop="@dimen/baseline_4"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorTertiary"
        android:visibility="gone"
        tools:text="Tue, June 2nd"
        tools:visibility="visible" />

</RelativeLayout>