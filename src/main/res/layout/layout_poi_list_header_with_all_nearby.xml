<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:layout_gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingTop="@dimen/title_top_padding"
    android:paddingRight="@dimen/title_right_padding">

    <Button
        android:id="@+id/allBtn"
        style="@style/MTButton.Header"
        android:text="@string/all" />

    <Button
        android:id="@+id/nearbyBtn"
        style="@style/MTButton.Header.Middle"
        android:layout_marginStart="@dimen/button_padding"
        android:layout_marginLeft="@dimen/button_padding"
        android:layout_toLeftOf="@id/allBtn"
        android:text="@string/nearby" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="false"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/nearbyBtn"
        android:drawablePadding="@dimen/title_drawable_padding"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/title_padding_left"
        android:paddingTop="@dimen/title_padding_top"
        android:paddingRight="@dimen/title_padding_right"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?attr/colorOnBackground"
        app:drawableTint="?attr/colorOnBackground"
        tools:drawableLeft="@drawable/ic_directions_bus_black_24dp"
        tools:text="TYPE TYPE TYPE TYPE TYPE TYPE TYPE TYPE " />

</RelativeLayout>