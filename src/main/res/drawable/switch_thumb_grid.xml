<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/switch_thumb_tint_border" />
        </shape>
    </item>
    <item
        android:id="@+id/switch_grid_oval_shape"
        android:bottom="@dimen/switch_thumb_oval_padding"
        android:left="@dimen/switch_thumb_oval_padding"
        android:right="@dimen/switch_thumb_oval_padding"
        android:top="@dimen/switch_thumb_oval_padding">
        <shape android:shape="oval">
            <solid android:color="@color/switch_thumb_tint" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/switch_thumb_bitmap_padding"
        android:left="@dimen/switch_thumb_bitmap_padding"
        android:right="@dimen/switch_thumb_bitmap_padding"
        android:top="@dimen/switch_thumb_bitmap_padding">
        <bitmap
            android:gravity="center"
            android:src="@drawable/switch_action_apps_dark_16dp" />
    </item>
</layer-list>