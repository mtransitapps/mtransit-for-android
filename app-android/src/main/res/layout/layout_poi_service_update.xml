<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/list_view_margin_horizontal"
    android:layout_marginTop="@dimen/baseline_8"
    android:background="@drawable/color_surface_rounded"
    android:paddingHorizontal="@dimen/baseline_16"
    android:paddingTop="@dimen/baseline_16"
    android:paddingBottom="0dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/service_update_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline_16"
        android:fontFamily="sans-serif-light"
        android:orientation="vertical"
        android:paddingStart="@dimen/baseline_24"
        android:paddingEnd="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?attr/colorOnSurface"
        android:textColorLink="?android:attr/textColorLink"
        tools:background="@drawable/service_update_info"
        tools:text="Service Update Service Update Service Update Service Update Service Update Service Update Service Update" />

    <!-- ON TOP of padding -->
    <TextView
        android:id="@+id/source_label"
        style="@style/MTTextSourceLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/baseline_2"
        android:visibility="gone"
        tools:text="Source: api.com"
        tools:visibility="visible" />

</FrameLayout>
