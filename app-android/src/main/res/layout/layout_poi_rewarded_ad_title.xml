<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingTop="@dimen/title_top_padding"
    android:paddingEnd="@dimen/title_end_padding">

    <TextView
        android:id="@+id/rewardAdTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="false"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/title_drawable_padding"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/title_padding_start"
        android:paddingTop="@dimen/title_padding_top"
        android:paddingEnd="@dimen/title_padding_end"
        android:paddingBottom="@dimen/title_padding_bottom"
        android:text="@string/watch_rewarded_ad_title_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="?attr/colorOnBackground"
        app:drawableLeftCompat="@drawable/ic_ondemand_video_black_24"
        app:drawableTint="?attr/colorOnBackground" />

</RelativeLayout>