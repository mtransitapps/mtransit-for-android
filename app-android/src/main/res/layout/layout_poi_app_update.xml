<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_poi_app_update_title" />

    <TextView
        android:id="@+id/appUpdateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/list_view_margin_horizontal"
        android:background="@drawable/color_surface_rounded"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="@dimen/baseline_16"
        android:paddingTop="@dimen/baseline_16"
        android:paddingEnd="@dimen/baseline_16"
        android:paddingBottom="@dimen/baseline_16"
        android:text="@string/app_update_btn_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible"
        tools:ignore="UnusedAttribute" />

</LinearLayout>