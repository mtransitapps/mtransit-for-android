<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:theme="@style/MTThemeOverlay">

    <View
        android:id="@+id/drawer_header_status_bar_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        tools:background="#00FF00"
        tools:layout_height="28dp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/action_bar_size_static"
        android:layout_height="@dimen/action_bar_size_static"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/drawer_header_status_bar_bg"
        android:contentDescription="@null"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/product_logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header_status_bar_bg"
        android:layout_toEndOf="@id/logo"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:minHeight="@dimen/action_bar_size_static"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:text="@string/app_name"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textStyle="normal" />

</RelativeLayout>